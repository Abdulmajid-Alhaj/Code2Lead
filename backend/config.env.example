# Server Configuration
NODE_ENV=development
PORT=5000

# CORS / Frontend URL
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/code2lead

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-very-long-and-random
JWT_EXPIRE=7d

# Cookie Configuration
# Name of the auth cookie
COOKIE_NAME=token
# Cookie lifetime in days
COOKIE_MAX_AGE_DAYS=7
# SameSite can be Lax | Strict | None (use None when front-end is on a different domain)
COOKIE_SAMESITE=Lax
# Set to true in production over HTTPS so cookies are only sent over TLS
COOKIE_SECURE=false
# Optional: set your domain for the cookie (e.g., .your-domain.com)
COOKIE_DOMAIN=

# Rate Limiting (optional)
# Maximum requests per window for general API
RATE_LIMIT_MAX=100
# Maximum requests per window for auth endpoints
AUTH_RATE_LIMIT_MAX=5
# Rate limit window in minutes
RATE_LIMIT_WINDOW_MS=900000

# Security (optional)
# Enable/disable helmet security headers
HELMET_ENABLED=true
# Trust proxy (set to true if behind reverse proxy)
TRUST_PROXY=true
